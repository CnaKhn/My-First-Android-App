<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/standard_card_radius"
    android:layout_margin="@dimen/standard_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/json_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/json_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/intro_slide_2_title"
            android:layout_below="@id/json_image"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/standard_margin"/>

        <TextView
            android:id="@+id/json_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Likes:"
            android:layout_below="@id/json_title"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/standard_margin"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>