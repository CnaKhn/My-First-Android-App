<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background" />

    <ImageView
        android:id="@+id/header_avatar"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_circle"
        android:padding="14dp"
        android:src="@drawable/ic_user"
        android:layout_alignParentStart="true"
        android:layout_above="@id/header_username"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/header_email"
        android:gravity="center"
        android:text="Login to your account"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/image_nav_header"
        android:textColor="@color/colorWhite"
        tools:text="sinakhanbabaie@gmail.com"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginStart="@dimen/standard_margin"/>


</RelativeLayout>